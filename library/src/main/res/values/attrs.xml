<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="WarningEditText">
        <!--要显示的警告内容-->
        <attr name="warning_text" format="string" />
        <!--要执行的警告动画-->
        <attr name="warning_duration" format="integer" />
        <!--警告内容最终要放的位置-->
        <attr name="warning_align" format="enum">
            <enum name="leftTop" value="1" />
            <enum name="rightTop" value="2" />
            <enum name="leftButtom" value="3" />
            <enum name="rightButtom" value="4" />
        </attr>
        <attr name="warning_start_size" format="dimension|reference" />
        <attr name="warning_end_size" format="dimension|reference" />
        <attr name="waring_color" format="color|reference" />

    </declare-styleable>
</resources>